<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="4500"
        motion:motionInterpolator="easeInOut">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="0"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="4"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:scaleX="0"
                android:scaleY="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:scaleX="0"
                android:scaleY="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:scaleX="1.1"
                android:scaleY="1.1"
                motion:framePosition="2"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="4"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="40"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:scaleX="0.7"
                android:scaleY="0.7"
                motion:framePosition="50"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                android:scaleX="0.7"
                android:scaleY="0.7"
                motion:framePosition="100"
                motion:motionTarget="@+id/logo_app" />
            <KeyAttribute
                motion:motionTarget="@+id/name_app"
                motion:framePosition="50"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/name_app"
                motion:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/name_app"
                motion:framePosition="75"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@+id/logo_app"
                motion:framePosition="65"
                android:translationX="-50dp" />
            <KeyAttribute
                motion:motionTarget="@+id/logo_app"
                motion:framePosition="50"
                android:translationX="0dp" />
            <KeyAttribute
                motion:motionTarget="@+id/logo_app"
                motion:framePosition="100"
                android:translationX="-50dp" />
            <KeyAttribute
                motion:motionTarget="@+id/name_app"
                motion:framePosition="65"
                android:translationX="30dp" />
            <KeyAttribute
                motion:motionTarget="@+id/name_app"
                motion:framePosition="50"
                android:translationX="0dp" />
            <KeyAttribute
                motion:motionTarget="@+id/name_app"
                motion:framePosition="100"
                android:translationX="30dp" />
        </KeyFrameSet>
    </Transition>
    
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/logo_app"
            android:layout_width="80dp"
            android:layout_height="80dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/name_app"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/logo_app"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/logo_app" />
    </ConstraintSet>
    
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/logo_app"
            android:layout_width="80dp"
            android:layout_height="80dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/name_app"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/logo_app"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/logo_app"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>