<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentOnBoarding1"
    android:paddingHorizontal="26dp">
    
    <TextView
        android:id="@+id/text_header"
        style="@style/TextHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fo_gilroy_extra_bold"
        android:text="Selamat datang di ViSiON"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    
    <TextView
        android:id="@+id/text_description"
        style="@style/TextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fo_nunito_sans_reguler"
        android:text="Aplikasi deteksi dan pengenalan warna yang membantu Anda dalam mengenali warna disekitar"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintEnd_toEndOf="@+id/text_header"
        app:layout_constraintStart_toStartOf="@+id/text_header"
        app:layout_constraintTop_toBottomOf="@+id/text_header" />
    
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="358dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="110dp"
        app:layout_constraintHeight_percent="0.45"
        android:contentDescription="onboarding_image_1"
        android:src="@drawable/image_onboarding1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_header"
        app:layout_constraintStart_toStartOf="@+id/text_header"
        app:layout_constraintTop_toBottomOf="@+id/text_description" />
</androidx.constraintlayout.widget.ConstraintLayout>